<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.flyou.recycleviewdecoration">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SimpleDecorationActivity" />
        <activity android:name=".ui.GridDecorationActivity" />
        <activity android:name=".ui.ListDecorationActivity" />
        <activity android:name=".ui.HeadDecorationActivity" />
        <activity android:name=".ui.StickyHeaderDecorationActivity" />
        <activity android:name=".ui.RankDecorationActivity" />
        <activity android:name=".ui.StepLineDecorationActivity" />
    </application>

</manifest>